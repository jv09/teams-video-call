    <div class="maincontainer">
        <div class="chat-window">
	
			
			<div style="width:85% ;height:98%;display:flex;flex-direction:column;margin-left:10%;margin-right:10%;">
				<div class="grp-window-header">
                    <a href="/home" class="back" style="margin-left: 10px;">
                        <b style="margin-top:auto; margin-left: 10px;" >back</b>
                        </a>
                        <div style="display: flex;width:100%;justify-content:flex-end">

                            <a id="create_meet" class="custom_link" href="#" data-toggle="modal" data-target="#meetcreationModal" style="align-items:center;color:black; margin-top:auto" >
                            
                           <b>Schedule Meet </b></a>
                        
			            </div>
                </div>

                <div id="chat-show">
                    <% for (chat of chats){%>
                        <div class="card" style="margin-bottom: 0.5%;">
                            <div class="card-body">
                                <div class="card-title" style="font-size: 15px;">
                                    <h5><%=chat.username%></h5>
                                </div>
                                <div class="card-subtitle mb-2 text-muted" style="font-size: 12px;">
                                    <h6><%=chat._id.getTimestamp()%></h6>
                                </div>
                                <div class="cardtext" style="font-size: 12px;">
                                    <%-chat.message%>
                                </div>
                            </div>
                        </div>    
                    <%} %>  
                </div>
                <div class="main__message__container">
                    <input id="chat_message__room" type="text" placeholder="Type message here...">
                    <span
                    class="material-icons"
                    type="button"
                    onclick="message()"
                    >send</span
                >
                </div>
            <div style="height: 100%; display: flex; align-items: center;">
                
            </div>
                
                <div style="display:flex;flex-direction:row;"> 
                <div id="text" style="width:100%;"></div>
                
		    </div> 
	    </div>



		</div>
        <div class="show-message"></div>
	
        <div class="d-flex flex-column align-items-stretch flex-shrink-0 bg-white" style="width: 380px;">
            <a href="/" class="d-flex align-items-center flex-shrink-0 p-3 link-dark text-decoration-none border-bottom">
              <svg class="bi me-2" width="0" height="24"><use xlink:href="#bootstrap"/></svg>
              <span class="fs-0 fw-semibold">Team Members</span>
            </a>
            <div class="list-group list-group-flush border-bottom scrollarea">       
                
                <% for (user of users){%>
                    <div style="display: flex; flex-direction: column; color: black;">
                        <ul>
                            <div><%= user.username %></div>
                            <div><%= user.email %></div>
                        </ul>
                    </br>
                    </div>
                <%} %>
