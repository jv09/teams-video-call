    <div class="modal fade" id="meetcreationModal" tabindex="-1" role="dialog"
            aria-labelledby="RoomcreationModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content" style="color:  black;">
                    <div class="modal-header" ">
                        <h5 class="modal-title" id="RoomcreationModalLongTitle">Schedule Meet</h5>
                    </div>
                    <form>
                        <div class="modal-body">
							
                            <div class="form-group">
                                <label for="meetname">Name</label>
                                <input type="text" class="form-control" id="meetname" style="color: black;" required>
                            </div>
                            <div class="form-group">
                                <label for="meetdate">Start Date</label>
                                <input type="date" class="form-control" id="meetdate" style="color: black;" required>
                            </div>
                            <div class="form-group">
                                <label for="meettime">Start Time</label>
                                <input type="time" class="form-control" id="meettime" style="color: black;" required>
                            </div>
                    
                        </div>
                        <div class="modal-footer"">
                            <button type="button" id="meet_modal_close" class="btn btn-secondary"
                                data-dismiss="modal">Close</button>
                            <button class="btn btn-primary" type="button" onclick="schedulemeet()"  data-dismiss="modal">
                                Create meet
                            </button>
                        </div>
                    </form>

                </div>
            </div>
    </div>

    



